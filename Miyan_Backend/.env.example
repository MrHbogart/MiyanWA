# Miyan Backend (.env)
# Copy to Miyan_Backend/.env and update values.

# Django basics
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
DJANGO_LOG_LEVEL=INFO

# Database
POSTGRES_DB=miyan
POSTGRES_USER=miyan
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432
DB_CONN_MAX_AGE=60
DB_WAIT_TIMEOUT=120
DB_WAIT_INTERVAL=3

# CORS/CSRF
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000
DJANGO_SESSION_COOKIE_NAME=miyan_sessionid
DJANGO_CSRF_COOKIE_NAME=miyan_csrftoken

# Security defaults (production)
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_TRUST_PROXY_HEADERS=True
DJANGO_USE_X_FORWARDED_HOST=True

# Throttling
DRF_USER_THROTTLE_RATE=1000/hour
DRF_ANON_THROTTLE_RATE=100/hour

# Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Build metadata
APP_VERSION=0.1.0
APP_COMMIT_SHA=local

# Telegram bot shared secret
TELEGRAM_SHARED_SECRET=change-me
